choice
    prompt "Select sle gamepad type"
    default SAMPLE_SUPPORT_SLE_GAMEPAD
    config SAMPLE_SUPPORT_SLE_GAMEPAD
        bool "Enable SLE GAMEPAD sample."
    config SAMPLE_SUPPORT_SLE_GAMEPAD_DONGLE
        bool "Enable SLE GAMEPAD Dongle sample."
endchoice