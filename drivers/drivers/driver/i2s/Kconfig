config I2S_BUS_MAX_NUM
    int
    prompt "I2S_BUS_MAX_NUM"
    default 1
    depends on DRIVER_SUPPORT_I2S

config I2S_SUPPORT_LOOPBACK
    bool
    prompt "I2S_SUPPORT_LOOPBACK"
    default y
    depends on DRIVER_SUPPORT_I2S

config I2S_SUPPORT_DMA
    bool
    prompt "I2S SUPPORT DMA"
    default n
    depends on DRIVER_SUPPORT_I2S