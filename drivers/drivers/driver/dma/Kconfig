config DMA_SUPPORT_LLI
    bool
    prompt "DMA Support lli"
    default y
    depends on DRIVER_SUPPORT_DMA
	
config DMA_SUPPORT_LPM
    bool
    prompt "DMA Support low power mode"
    default y
    depends on DRIVER_SUPPORT_DMA
